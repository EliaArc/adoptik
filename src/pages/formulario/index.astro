---
import Layout from "../../layouts/Layout.astro";
import { MdEmail } from "react-icons/md";
import CardFormulario from "../../components/CardFormulario.astro";
---

<Layout>
  <main class="min-h-screen text-black bg-gradient-to-b from-pink-50 to-purple-50 py-8 px-4 sm:px-8">

    <div class="p-4">
        <div class="flex items-center gap-2">
          <div class="w-10 h-10 bg-gradient-to-r from-pink-500 to-purple-500 rounded-full flex items-center justify-center">
            <MdEmail className="text-2xl text-white" />
          </div>
          <h1 class="font-bold text-2xl bg-gradient-to-r from-pink-500 to-purple-500 bg-clip-text text-transparent">
            Adoptik
          </h1>
        </div>

    <h2 class="text-2xl font-bold text-center text-black mb-8">Formulario de Adopción</h2>

    <section class="bg-white rounded-xl shadow-lg p-6 space-y-6">
      <h3 class="text-xl font-semibold text-purple-700 border-b pb-2">Datos del solicitante</h3>

      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700">Nombre completo</label>
          <input type="text" placeholder="Nombre y apellido" required class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-400 transition" />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700">Edad</label>
          <input type="number" placeholder="Edad" required class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:outline-none focus:ring-2  focus:ring-purple-400 transition" />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700">CURP</label>
          <input type="text" placeholder="CURP" required class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:outline-none focus:ring-2  focus:ring-purple-400 transition" />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700">Dirección</label>
          <input type="text" placeholder="Dirección" required class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:outline-none focus:ring-2  focus:ring-purple-400 transition" />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700">Teléfono</label>
          <input type="tel" placeholder="Número de teléfono" required class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:outline-none focus:ring-2  focus:ring-purple-400 transition" />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700">Correo electrónico</label>
          <input type="email" placeholder="Correo" required class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:outline-none focus:ring-2  focus:ring-purple-400 transition" />
        </div>
      </div>
    </section>

    <section class="mt-10 bg-white rounded-xl shadow-lg p-6 space-y-6">
      <h3 class="text-xl font-semibold text-purple-700 border-b pb-2">Situación familiar y del hogar</h3>

      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">¿Vive en casa propia o alquilada?</label>
          <div class="flex gap-6">
            <label class="flex items-center gap-2"><input type="radio" name="vivienda" value="propia" /> Casa propia</label>
            <label class="flex items-center gap-2"><input type="radio" name="vivienda" value="alquilada" /> Alquilada</label>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Tipo de vivienda</label>
          <div class="flex gap-6">
            <label class="flex items-center gap-2"><input type="radio" name="tipov" value="casa" /> Casa</label>
            <label class="flex items-center gap-2"><input type="radio" name="tipov" value="departamento" /> Departamento</label>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700">¿Cuántas personas viven en el hogar?</label>
          <input type="number" placeholder="Número de personas" class="mt-1 w-full px-4 py-2 border rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-400 transition" />
        </div>
      </div>
    </section>
  </main>
</Layout>
